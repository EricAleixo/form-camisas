generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user_form{
  id String @id @default(uuid())
  nome String
  telefone String
  camisa CamisaCor
  turma Turma
  tamanho Tamanho
  estilo EstilosCamisas
  pagamento Pagamento
}

enum CamisaCor{
  BEGE
  PRETA
}

enum Turma{
  INFOB3
  INFOA3
  PROFESSOR
}

enum Tamanho{
  PP
  P
  M
  G
  GG
  XGG
}

enum EstilosCamisas{
  NORMAL
  OVERSIZED
  BABY_LOCK
}

enum Pagamento{
  PIX
  FISICO
}
